# This file is for unifying the coding style for different editors and IDEs.
# More information at http://EditorConfig.org

# top-most EditorConfig file
root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell
# https://google.github.io/styleguide/shell.xml#Indentation
[*.{bash,sh,zsh}]
indent_style = space
indent_size = 2

# HTML
# https://google.github.io/styleguide/htmlcssguide.xml#General_Formatting_Rules
[*.{htm,html}]
indent_style = space
indent_size = 2

# Handlebars
[*.{hbs,handlebars}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# CSS
# https://google.github.io/styleguide/htmlcssguide.xml#General_Formatting_Rules
# http://cssguidelin.es/#syntax-and-formatting
[*.css]
indent_style = space
indent_size = 2

# SASS
# https://sass-guidelin.es/#syntax--formatting
[*.{sass,scss}]
indent_style = space
indent_size = 2

# LESS
# https://github.com/less/less-docs#less-standards
[*.less]
indent_style = space
indent_size = 2

# JavaScript, JSON, JSX, JavaScript Modules, TypeScript
# https://github.com/feross/standard
# https://prettier.io
[*.{cjs,js,json,jsx,mjs,ts,tsx}]
indent_style = space
indent_size = 2

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# PHP
# http://www.php-fig.org/psr/psr-2/
[*.php]
indent_style = space
indent_size = 4

# GraphQL
# https://graphql.org/learn/
# https://prettier.io
[*.graphql]
indent_style = space
indent_size = 2

# c,c++
[*.{c,h,cpp,hpp}]
indent_size = 2

# GNU make
# https://www.gnu.org/software/make/manual/html_node/Recipe-Syntax.html
[Makefile]
indent_style = tab

# Rust
# https://github.com/rust-lang/rust/blob/master/src/doc/style/style/whitespace.md
[*.rs]
indent_style = space
indent_size = 4
insert_final_newline = false

# Java
# https://google.github.io/styleguide/javaguide.html#s4.2-block-indentation
[*.java]
indent_style = space
indent_size = 2

# Kotlin
# https://android.github.io/kotlin-guides/style.html#indentation
[*.{kt,kts}]
indent_style = space
indent_size = 4

# Python
# https://www.python.org/dev/peps/pep-0008/#code-lay-out
[*.py]
indent_style = space
indent_size = 4

# Go
# https://golang.org/cmd/gofmt/
[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 8

# Ruby
# http://www.caliban.org/ruby/rubyguide.shtml#indentation
[*.rb]
indent_style = space
indent_size = 2

# YAML
# http://yaml.org/spec/1.2/2009-07-21/spec.html#id2576668
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# TOML
# https://github.com/toml-lang/toml/tree/master/examples
[*.toml]
indent_style = space
indent_size = 2
